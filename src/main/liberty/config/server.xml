<?xml version="1.0" encoding="UTF-8"?>
<!--Open Liberty documentation does not use schema in examples.-->
<server description="Jakarta EE Pokemon server">
    <featureManager>
        <feature>servlet-6.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>faces-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>persistence-3.1</feature>
        <feature>enterpriseBeans-4.0</feature>
        <feature>appSecurity-5.0</feature>
        <feature>websocket-2.1</feature>
        <feature>beanValidation-3.0</feature>
    </featureManager>

    <dataSource id="H2DataSource" jndiName="jdbc/Pokemon">
        <jdbcDriver libraryRef="h2Lib" />
        <properties URL="jdbc:h2:mem:pokemon" user="sa" password="" />
    </dataSource>

    <library id="h2Lib">
        <fileset dir="${shared.resource.dir}/h2" includes="*.jar" />
    </library>
</server>
